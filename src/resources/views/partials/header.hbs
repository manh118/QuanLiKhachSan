        <li><a class="navbar_item" href="/question">Liên hệ</a></li>
        <li><a class="navbar_item" href="">Thư viện ảnh</a></li>
      </ul>
      <ul class="navbar_list">
        {{#if username}}
        
        <li class="navbar__taikhoan"> {{!-- Bạn sẽ cần thêm CSS cho class này --}}
            {{!-- Hiển thị tên người dùng --}}
            <a class="navbar_item Huy_padding" style="cursor: pointer;">
                <i class="fa-solid fa-user mr-3"></i>{{username}}
            </a>
            
            <ul class="navbar__hangphong__list">
                {{#if (eq userRole 'user')}}
                    {{!-- 1. Link đến Lịch sử đặt phòng --}}
                    <li class="navbar__hangphong__item__link">
                        <a href="/account/bookings">Lịch sử đặt phòng</a>
                    </li>
                {{/if}}

                {{#if (eq userRole 'admin')}}
                    {{!-- 2. Link đến Trang quản lý --}}
                    <li class="navbar__hangphong__item__link">
                        <a href="/manage">Trang quản lý</a>
                    </li>
                {{/if}}
                
                {{!-- 3. Link Đăng xuất --}}
                <li class="navbar__hangphong__item__link">
                    <a href="/account/logout">Đăng xuất</a>
                </li>
            </ul>
        </li>
    {{else}}
        {{!-- NẾU CHƯA ĐĂNG NHẬP --}}
        <li>
            <a href="/account/login" class="navbar_item Huy_padding">
                <i class="fa-solid fa-user mr-3"></i>Tài khoản
            </a>
        </li>
    {{/if}}
      </ul>
