        <li>
          <a href="/gioi_thieu" class="navbar_item" navbar_itemhref="">Giới thiệu</a>
        </li>
        <li class="navbar__hangphong">
          
          <a class="navbar_item" href="/hangphong">hạng phòng</a>
          <ul class="navbar__hangphong__list">
            {{#each RoomTypes}}
            <li class="navbar__hangphong__item__link">
              <a href="/hangphong/{{this._id}}/rooms">{{this.name}}</a>
            </li>
            {{/each}}
          </ul>
        </li>
        <li class="navbar__dichvu">
          <a class="navbar_item" >dịch vụ</a>
